<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/viewHabitsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Habits"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="8dp" />

    <ListView
        android:id="@+id/habitListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/viewHabitDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="View Habit Details" />

        <Button
            android:id="@+id/deleteHabitButton"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Delete Habit" />
    </LinearLayout>
</LinearLayout>
